<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Registrarse</servlet-name>
        <servlet-class>Vista.Registrarse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registrar</servlet-name>
        <servlet-class>Vista.Registrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Vista.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarUsuario</servlet-name>
        <servlet-class>Vista.EditarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearEvento</servlet-name>
        <servlet-class>Vista.CrearEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarEvento</servlet-name>
        <servlet-class>Vista.RegistrarEvento</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registrarse</servlet-name>
        <url-pattern>/RegistrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registrar</servlet-name>
        <url-pattern>/Registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Loguearse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarUsuario</servlet-name>
        <url-pattern>/Editar-Usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearEvento</servlet-name>
        <url-pattern>/Nuevo-Evento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarEvento</servlet-name>
        <url-pattern>/Crear-evento</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
